<div class="container color:yellow">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          餐廳名字：
        </span>
        {{restaurants.name}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurants.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurants.location}}
        <a href="{{restaurants.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurants.phone}}
      </p>

      <p class="mb-5">
        {{restaurants.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurants.image}}" alt="{{restaurants.name}}"
        style="max-width: 600px;">

      <div class="card-footer mb-3 text-right bg-light">

        <a href="/" class="m-2">
          <div class="btn btn-outline-info btn-sm z-depth-0 my-4" style="display: inline;">
            back</div>
        </a>


        <a class="btn btn-info m-2 btn-sm z-depth-0 my-4" href="/restaurants/{{restaurants._id}}/edit">edit</a>

        <form action="/restaurants/{{ restaurants._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-info btn-sm z-depth-0 my-4">delete</button>
        </form>

      </div>
    </div>
  </div>
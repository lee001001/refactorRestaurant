<div class="container mx-auto p-5 my-5" style="color:#f80101; background:#fce2cf; border-radius:8px;">
  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
    <!-- 餐廳中文名稱 -->
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">餐廳名字</label>
      <div class="col-sm-10">
        <input type="text" name="name" class="form-control" id="name" value="{{restaurant.name}}"
          placeholder="{{restaurant.name}}" required>
      </div>
    </div>

    <!-- 餐廳英文名稱 -->
    <div class="form-group row">
      <label for="name_en" class="col-sm-2 col-form-label">餐廳英文名字 </label>
      <div class="col-sm-10">
        <input type="text" name="name_en" class="form-control" id="name_en" value="{{restaurant.name_en}}">
      </div>
    </div>

    <!-- 餐廳類別名稱 -->
    <div class="form-group row">
      <label for="category" class="col-sm-2 col-form-label">餐廳種類 </label>
      <div class="col-sm-10">
        <input type="text" name="category" class="form-control" id="category" value="{{restaurant.category}}">
      </div>
    </div>

    <!-- 餐廳圖片上傳 -->
    <div class="form-group row">
      <label for="image" class="col-sm-2 col-form-label">餐廳圖片</label>
      <div class="col-sm-10">
        <input type="url" name="image" class="form-control" id="image" value="{{restaurant.image}}">
      </div>
    </div>

    <!-- 餐廳地址 -->
    <div class="form-group row">
      <label for="location" class=" col-sm-2 col-form-label">地址 </label>
      <div class="col-sm-10">
        <input type="text" name="location" class="form-control" id="location" value="{{restaurant.location}}">
      </div>
    </div>

    <!-- 餐廳電話 -->
    <div class="form-group row">
      <label for="phone" class="col-sm-2 col-form-label">餐廳電話 </label>
      <div class="col-sm-10">
        <input type="text" name="phone" class="form-control" id="phone" value="{{restaurant.phone}}">
      </div>
    </div>

    <!-- google_map-->
    <div class="form-group row">
      <label for="google_map" class="col-sm-2 col-form-label">google_map </label>
      <div class="col-sm-10">
        <input type="url" name="google_map" class="form-control" id="google_map" value="{{restaurant.google_map}}">
      </div>
    </div>

    <!-- 餐廳評分-->
    <div class="form-group row">
      <label for="rating" class="col-sm-2 col-form-label">rating </label>
      <div class="col-sm-10">
        <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1"
          value="{{restaurant.rating}}">
      </div>
    </div>

    <!-- 餐廳簡介  -->
    <div class="form-group row">
      <label for="description" class="col-sm-2 col-form-label">餐廳簡介</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="description" id="description" cols="48"
          rows="3">{{restaurant.description}}</textarea>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 m-3">
        <button type="submit" class="btn btn-major" id="edit">save</button>
        <a href="./" class="btn btn-major" id="edit"> Back</a>
      </div>
    </div>

  </form>
</div>